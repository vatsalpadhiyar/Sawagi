<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_activation_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.sawagi.register.ActivationScreen">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#18816B">

        <TextView
            android:id="@+id/activation_toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/loginTitle"
            android:textColor="@color/colorTitle" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorTopLine"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/activation_txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="You should receive a text message with a one"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/activation_txtCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="time activation code sent to"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize" />


        <TextView
            android:id="@+id/activation_txtPhoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="+971 4 159 9898"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/titleField" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activation_layout_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColorHint="@color/colorTitleField"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/activation_editCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Authentication code"
                android:inputType="number"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/inputField" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/activation_txtResent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:text="Resent Code"
            android:textColor="@color/colorTitleField"
            android:textSize="@dimen/titleField" />

        <TextView
            android:id="@+id/activation_btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_driver"
            android:gravity="center_horizontal|center_vertical"
            android:text="NEXT"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/buttonSize" />

    </LinearLayout>
</LinearLayout>
